{% extends "gift.skeleton.twig" %}

{% block title %}{% endblock %}

{% block giftmain %}

    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="text-center">
                    <span class="icon icon-gift icon-5x"></span>
                    <h1 class="mb-0">Félicitations ! Vous avez reçu un coffret {% if box.kdo %}cadeau {% endif %} de la
                        part de {{ box.users.prenom }} {{ box.users.nom }}.</h1>
                </div>
                <hr>
                <h2>{{ box.libelle }}</h2>
                <p class="m-0">{{ box.description }}</p>
                <h4 class="mt-3">Ce coffret contient les produits suivants :</h4>
                <table class="table table-striped">
                    <thead>
                    <tr>
                        <th>#</th>
                        <th>Nom</th>
                        <th>Détail unité</th>
                        <th>Quantité</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for presta in box.prestations %}
                        <tr>
                            <td>{{ loop.index }}</td>
                            <td>
                                <a href="{{ presta.url }}">
                                    <div>
                                        <p class="mt-0">{{ presta.libelle }}</p>
                                        <p class="mb-0">{{ presta.description }}</p>
                                    </div>
                                </a>
                            </td>
                            <td>{{ presta.unite }}</td>
                            <td>{{ presta.quantite }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
                <p class="text-muted">Vous pouvez contacter {{ box.users.prenom }} {{ box.users.nom }} par mail à
                    l'adresse suivante : <a href="mailto:{{ box.users.email }}">{{ box.users.email }}</a></p>
            </div>
        </div>
    </div>

{% endblock %}